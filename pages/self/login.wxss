.login{
  font-family: '黑体';
  background:#eee;
  width: 100%;
  height:100vh;
  display: flex;
  flex-direction: column;
}
.login .top{
  width: 100%;
  height:150px;
  display: flex;
  justify-content: center;
}
.login .top image{
  width:120px;
  height:60px;
  margin:40px 0;
}
.login .middle {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.login .middle .content {
  width:80%;
  margin:0px auto;
  margin-bottom:10px;
  height:40px;
  display: flex;
  border-bottom:1px solid #d5d5d5;
}
.login .middle .content image {
  width:20px;
  height:20px;
  margin:10px;
}
.login .middle .content input{
  margin:7px;
}
.placeholder{
  font-size:14px;
  font-family: '黑体';
}
.login .middle .forget-pass-tip{
  text-align: right;
  padding-right:50px;
  font-size:14px;
  color:#8a8a8a;
}
.login .bottom {
  display: flex;
  flex-direction: column;
  width:100%;
  margin:40px;
}
.login .bottom view{
  width: 80%;
  height:42px;
  line-height: 42px;
  text-align: center;
  margin-bottom:10px;
}
.login .bottom view.loginBtn{
  color:#fff;
  background:#f90;
}
.login .bottom view.registerBtn{
  border:1px dashed #f90;
  color:#f90;
}