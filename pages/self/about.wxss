.about{
  font-family: '黑体';
  background:#f5f5f5;
  display: flex;
  flex-direction: column;
  width:100%;
  height:500px;
}
.about .top{
  width:100%;
  display: flex;
  flex-direction:column;
  align-content: center;
  text-align: center;
  padding:20px 0px;
}
.about .top image {
  width:100px;
  height:60px;
  margin:0px auto 10px;
}
.about .top text{
  font-size:24px;
  font-weight:bold;
}
.about .middle{
  background: #fff;
  padding:20px;
  font-size:20px;
  margin-bottom:20px;
}
.about .bottom{
  background: #fff;
  width:100%;
  padding:10px 20px;
}
.about .bottom .list{
  margin-bottom:10px;
  font-size:16px;
}