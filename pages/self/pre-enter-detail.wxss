.pre-enter-detail{
  width:100%;
  height:100vh;
  background:#f5f5f5;
  display: flex;
  flex-direction: column;
  font-family: '黑体';
}
.pre-enter-detail .top{
  width:100%;
  height:150px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding: 10px;
  background: #fff;
  border-bottom:1px solid #f5f5f5;
}
.pre-enter-detail .top .title{
  color:#555;
  font-size:16px;
  font-weight: bold;
  padding-bottom:10px;
}
.pre-enter-detail .top .content{
  color:#767676;
  font-size:14px;
  padding-bottom:10px;
}
.pre-enter-detail .top .time{
  color:#999;
  font-size:12px;
  align-self: flex-end;
}


.pre-enter-detail .middle{
  width:100%;
  display: flex;
  flex-direction: column;
  padding: 10px;
  background: #fff;
  margin-bottom:10px;
}
.pre-enter-detail .middle .line{
  width:100%;
  display: flex;
}
.pre-enter-detail .middle .line{
  color:#555;
  font-size:14px;
  margin-bottom:10px;
  
}
.pre-enter-detail .middle .line image{
  width:16px;
  height:16px;
  vertical-align: middle;
  margin-right:10px;
}
.pre-enter-detail .middle .line text{
  font-size:14px;
  color:#555;
  padding:1px;
}
.pre-enter-detail .middle .line label{
  color:#959595;
  margin-right:10px;
}
.pre-enter-detail .middle .picture{
  width:100%;
  height:250px;
  display: flex;
  flex-wrap: wrap;
}
.pre-enter-detail .middle .picture .item{
  width : 45%;
  margin:0 10px 10px 0;
  height:75px;
  background:#f0f0f0;
}






.pre-enter-detail .bottom{
  width:100%;
  height:200px;
  display: flex;
  flex-direction: column;
  padding: 10px;
  background: #fff;
}
.pre-enter-detail .bottom .title{
  width:100%;
  display: flex;
}
.pre-enter-detail .bottom .title text{
  border-left:5px solid #f90;
  color:#666;
  font-size:12px;
  margin-bottom:20px;
  padding-left:10px;
}
.pre-enter-detail .bottom .linker{
  display: flex;
}
.pre-enter-detail .bottom .linker .left{
  display: flex;
  flex-direction: column;
  color:#555;
  font-size:14px;
  margin-right:20px;
}
.pre-enter-detail .bottom .linker .left view{
  margin-bottom:10px;
}
.pre-enter-detail .bottom .linker .right{
  
}
.pre-enter-detail .bottom .linker .right image{
  width:40px;
  height:40px;
}


