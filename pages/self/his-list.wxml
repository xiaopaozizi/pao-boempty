<!--index.wxml-->
<import src="../template/list2.wxml" />
<scroll-view scroll-y="true" style="height: {{windowHeight}}px" bindscrolltolower="more" class="his-list">
    <view class="title" wx:if="{{ count > 0 }}">
        <text class="num">{{count}}</text>
        <text class="text">累计单量</text>
    </view>
    <!--图片查看-->
  <modal hidden="{{isHiddenModal}}" class="imageModal" title="" confirm-text="" cancel-text="" bindtap="hideImageHandle" no-cancel="{{nocancel}}" >
      <image src="{{imageSrc}}"></image>
  </modal>
    <block wx:for="{{lists}}" wx:for-item="list">
        <template is="list" data="{{...list}}"></template>
        <view class="bottom">
          <button size="mini"  class="look-active" data-imgsrc="{{list.orderImgUrl}}" bindtap="showImage">查看预约单</button>
        </view> 
    </block>
</scroll-view>

        
           