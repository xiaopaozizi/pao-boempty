<!--index.wxml-->
<view class="mod-pass">
    <view class="form">
        <view class="form-item">
            <label for="old-pass">当前密码</label>
            <input type="password" placeholder-class='placeholder' id="old-pass"placeholder="请输入当前密码" />
        </view>
        <view class="form-item">
            <label for="new-pass">新 密 码</label>
            <input type="password" placeholder-class='placeholder' id="new-pass"placeholder="请设置新密码" />
        </view>
        <view class="form-item">
            <label for="com-pass">确认新密码</label>
            <input type="password" placeholder-class='placeholder' id="com-pass"placeholder="请再次填入" />
        </view>
        <button class="save-btn" size="default" type="primary">保存</button>
    </view>
</view>