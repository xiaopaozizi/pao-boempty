<!--index.wxml-->
<view class="login">
    <view class="top">
      <image src="../../images/loading_icon.png"></image>
    </view>
    <view class="middle">
      <view class="content">
        <image src="../../images/tel_icon@2x.png"></image>
        <input type="number" placeholder="请输入手机号码" placeholder-class='placeholder' value="{{telphone}}" bindinput="phoneHandle" value="{{telphone}}" />
      </view>
      <view class="content">
        <image src="../../images/pas_icon@2x.png"></image>
        <input type="password" placeholder="请输入密码" placeholder-class='placeholder' value="{{password}}" bindinput="passHandle"  />
      </view>
      <view class="forget-pass-tip">
      <navigator url="forget-pass">忘记密码？</navigator></view>
    </view>
    <view class="bottom">
      <view class="loginBtn" bindtap="loginHandle">登录</view>
      <!--<view class="registerBtn"><navigator url="register">注册</navigator></view>-->
    </view>
</view>