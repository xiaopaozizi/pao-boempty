.mod-pass{
  padding:0;
  width : 100%;
  background : #f5f5f5;
}
.mod-pass .form {
  margin:20px 0 50px 0;
  background : #fff;
}
.mod-pass .form-item{
  margin-bottom : 20px;
  width : 90%;
  display: flex;
  justify-content: flex-start;
  padding:0 20px;
}
.mod-pass .form-item label {
  width : 120px;
  height : 26px;
  line-height: 26px;
  font-weight: bold;
}
.mod-pass .save-btn{
  width : 90%;
  background:#fe9900;
  margin: 80px 20px;
}

