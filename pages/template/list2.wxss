.list{
  width : 100%;
  display: flex;
  flex-direction: column;
  align-items:flex-start;
  margin-top:10px;
  background:#fff;
}


.list .top {
  padding-top:10px;
  display: flex;
}
.list .top text{
  color:#fe9900;
  font-weight:bold;
}
.list .top .price{
  color : #fe4800;
  text-align: center;
  font-weight: bold;
  margin-left:10px;
}
.list .top .progress {
  margin-left:15px;
  width:40px;
}
.list .top .progress .text {
  font-size:12px;
  color:#999;
  font-weight: bold;

}
.list .top image{
  width:20px;
  height:20px;
  margin-right:0;
  vertical-align: top;
}
.list .top image.arrow-left{
  margin-right:5px;
}


.list .middle {
  display: flex;
  width:100%;
}
.list .middle .main{
  padding:10px;
  display: flex;
  width:80%;
  flex-direction: column;
}
.list .middle .main .content {
  display: flex;
  width:100%;
}
.list .middle .main .content text{
  font: bold 12px/20px Arial, Helvetica, sans-serif ;
  color:#999;
}
.list .middle .main .content image {
  width:20px;
  height:20px;
  vertical-align: middle;
  margin-right:10px;
}
.list .middle .main .content .case{
  margin-right:20px;
}


.list .middle .picture{
  width:20%;
}
.list .middle .picture image {
  margin-top:20px;
  margin-left:-10px;
}
.list .middle .picture wx-image.already-over {
  width : 60px;
  height:40px;
}
.list .middle .picture wx-image.phone {
  width : 40px;
  height:40px;
}


.list .bottom{
  width:100%;
  text-align: right;
}

.list .bottom button {
  background : #838383;
  color:#fff;
  font-weight: bold;
}


.list .bottom-btn .look-over{
  background : #838383;
  color:#fff;
  font-weight: bold;
}
.list .bottom .look-active{
  background : #fe4800;
  color:#fff;
  font-weight: bold;
}
.list .bottom .rob {
  margin-top:20px;
  text-align: center;
  background : #fff;
  color:#fe9900;
  font-weight: bold;
}
.list .bottom .rob:after{
  border:none;
}
