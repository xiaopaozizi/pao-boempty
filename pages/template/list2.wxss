.list{
  width : 100%;
  display: flex;
  flex-direction: column;
  align-items:flex-start;
  margin-top:10px;
  background:#fff;
}


.list .top {
  font-size:14px;
  width:100%;
  display: flex;
  justify-content: space-between;
  margin-top:10px;
}
.list .top text{
  color:#fe9900;
  font-weight:bold;
  font-size:34rpx;
  text-indent: 0.6em;
}

.list .top .phone{
  color : #fe4800;
  text-align: center;
  font-weight: bold;
  margin-right:20px;
  font-size:20px;
}




.list .middle {
  display: flex;
  width:100%;
}
.list .middle .main{
  padding:10px;
  display: flex;
  width:80%;
  flex-direction: column;
}
.list .middle .main .content {
  display: flex;
  width:100%;
}

.list .middle .main .barcode{
  height:100px;
  
}
.list .middle .main .barcode .aaa{
  width : 100%;
  height:100%;
  background-size:cover;
}
.list .middle .main .content .icon{
  color:green;
  font-size:28rpx;
}
.list .middle .main .content text{
  font: bold 35rpx/70rpx '黑体';
}
.list .middle .main .content text.key{
  text-indent: 0.5em;
  font-size:28rpx;
  color:green;
}
.list .middle .main .content text.second{
  text-indent: 2em;
}
.list .middle .main .content text.value{
  font-weight: normal;
  font-size:28rpx;
}
.list .middle .main .content text.important{
  font-weight: normal;
  font-size:32rpx;
}
.list .middle .main .content text.order{
  color:red;
}
.list .middle .main .content image {
  width:18px;
  height:18px;
  margin-right:10px;
  margin-top:3px;
  vertical-align: middle;
}
.list .middle .main .content .case{
  margin-right:20px;
}


.list .middle .picture{
  width:20%;
  display:flex;
  flex-direction: column;
  margin-left:-60rpx;
}
.list .middle .picture .status{
  padding:2px 5px;
  background:#ccc;
  color:#fff;
  font-weight: bold;
  border-radius: 10%;
  margin-top:50rpx;
}
.list .middle .picture .price{
  font-size:50rpx;
  font-weight:bold;
  color:#f60;
  margin-top:30rpx;
}
.list .middle .picture .box-size{
  margin-top:30rpx;
}
.list .middle .picture image {
  margin-top:10px;
  margin-left:-10px;
}
.list .middle .picture wx-image.already-over {
  width : 120px;
  height:60px;
  margin-left:-50px;
}




