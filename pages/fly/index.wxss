@import "../template/list2.wxss";


.his-list{
  width : 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  background:#f5f5f5;
  height:auto;
}
.his-list .nav {
  width : 100%;
  background:#fff;
  padding-top:20px;
  padding-bottom:10px;
  display: flex;
  justify-content: space-around;
}
.his-list .nav .pos {
  flex-grow: 1;
  text-align: center;
}
.his-list .nav .pos:first-child{
  border-right: 1px solid #ccc;
}
.his-list .nav image {
  width:20px;
  height:20px;
  vertical-align: top;
  margin-right : 5px;
}
.his-list .nav .pos text {
  color : #999;
  font-size : 14px;
  font-weight: bold;
  height: 20px;
  line-height: 20px;
}



.his-list .address {
  width:100%;
  display: flex;
  flex-direction: column;
  font-weight:bold;
}
.his-list .address .choice{
  width:100%;
  display: flex;
  justify-content: space-around;
}
.his-list .address .choice view {
  margin-top:10px;
  width:100px;
  height:30px;
  line-height:30px;
  text-align:center;
}
.his-list .address .choice view.active{
  border-radius:20px;
  background:#ffe7c3;
  color:orange;
}



.his-list .list .bottom{
  margin-top:-20px;
}
