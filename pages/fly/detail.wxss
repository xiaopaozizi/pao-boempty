.detail {
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  width:100%;
  font: bold 12px/20px "微软雅黑" ;
}
.detail .top{
  display: flex;
  width:100%;
  margin-bottom:10px;
  padding:10px;
  background:#fff;
}


.detail .top .left{
  width:75%;
}
.detail .top .right{
  width:25%;
  font-size:16px;
  font-weight: bold;
  padding-right:5px;
  text-align: center;
}
.detail .top .right .price{
  color:red;
}
.detail .top .right .status{
  color:orange;
  font-size:14px;
}


.detail .middle{
  width:100%;
  background:#fff;
  display: flex;
  flex-direction: column;
  padding:10px;
  font-size:14px;
  margin-bottom:100px;
}

.detail .middle .list{
  width:100%;
  display: flex;
  margin-bottom:5px;
}
.detail .middle .list .icon{
  width:10%;
}
.detail .middle .list .icon image{
  width:20px;
  height:20px;
}
.detail .middle .list .content{
  width:90%;
  display: flex;
  flex-direction: column;
}
.detail .middle .list .content .desc{
  font-weight: bold;
  color:#666;
}







.detail .bottom {
  margin:10px;
}
.detail .bottom button{
  background:orange;
  color:#fff;
  font-weight: normal;
}
