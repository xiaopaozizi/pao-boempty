.detail{
  padding:0;
  width : 100%;
  height : 800px;
}
.detail .list{
  width : 100%;
  height : auto;
  padding:10px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.detail .list .title {
  font-weight: bold;
  margin-bottom : 10px;
  display: flex;

}
.detail .list .content {
  color : #999;
  font-size:14px;
  margin-bottom:10px;
  font-weight: bold;
  letter-spacing: 2px;
}
.detail .list .time {
  color : #999;
  font-size:16px;
  font-weight: bold;
  width : 90%;
  text-align: right;
}


.table {
  padding:15px;
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
  border-top:1px solid #ccc;
  border-left : 1px solid #ccc;
  border-right : 1px solid #ccc;
}
.tr:last-child{
  border-bottom : 1px solid #ccc;
}
.td {
  width:40%;
  justify-content: space-between;
  text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}
