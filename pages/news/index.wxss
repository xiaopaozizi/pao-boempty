.news{
  padding:0;
  width : 100%;
  height : 100vh;
  overflow: hidden;
  background : #f5f5f5;
  font-family: '黑体';
}
.news .list{
  width : 100%;
  height : auto;
  padding:10px;
  margin-bottom:10px;
  background : #fff;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.news .list .title {
  display: flex;

}
.news .list .title  image {
  width : 25px;
  height:25px;
  margin-top : -2px;
}
.news .list .content {
  color : #666;
  font-size:14px;
  margin-bottom:10px;
  letter-spacing: 2px;
  padding-right:10px;
}
.news .list .time {
  color : #999;
  font-size:12px;
  width : 90%;
  text-align: right;
}
