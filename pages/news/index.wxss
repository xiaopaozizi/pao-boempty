.news{
  padding:0;
  width : 100%;
  height : 800px;
  background : #f5f5f5;
}
.news .list{
  width : 100%;
  height : auto;
  margin:10px;
  background : #fff;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.news .list .title {
  font-weight: bold;
  margin-bottom : 10px;
  display: flex;

}
.news .list .title  image {
  width : 25px;
  height:25px;
  margin-top : -2px;
}
.news .list .content {
  color : #999;
  font-size:14px;
  margin-bottom:10px;
  font-weight: bold;
  letter-spacing: 2px;
}
.news .list .time {
  color : #999;
  font-size:16px;
  font-weight: bold;
  width : 90%;
  text-align: right;
}
