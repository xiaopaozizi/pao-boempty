
@import "../template/list.wxss";
.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.nav {
  display: flex;
}
.nav .nav-item {
  display: flex;
  flex-direction: column;
  margin:10px 20px 10px;
  text-align: center;
}
.nav .nav-item image {
  width : 40px;
  height : 40px;
}
.nav .nav-item text {
  font-size : 14px;
  font-weight: bold;
  color : #999;
}
.nav-text {
  font-size:14px;
  color : #999;
  font-weight: bold;
  background : #f5f5f5;
  padding-top:5px;
}
.nav-text text {
  height : 20px;
  line-height: 20px;
}
.his-list{
  width : 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  background:#f5f5f5;
  height:auto;
}

.his-list .nav .pos text {
  color : #999;
  font-size : 14px;
  font-weight: bold;
  height: 20px;
  line-height: 20px;
}

