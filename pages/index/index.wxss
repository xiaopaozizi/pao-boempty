
@import "../template/list2.wxss";

.view-scroll{
  height:800rpx;
}
.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.nav {
  display: flex;
  font-family:'黑体';
}
.nav .nav-item {
  display: flex;
  flex-direction: column;
  margin:10px 20px 10px;
  text-align: center;
}
.nav .nav-item image {
  width : 40px;
  height : 40px;
}

.nav .nav-item text {
  font-size : 14px;
  color : #666;
}
.nav .nav-item .icon{
  font-size:40px;
  color:#3385ff;
}
.nav-text {
  font-size:14px;
  color : #999;
  background : #f5f5f5;
  padding-top:5px;
}
.nav-text text {
  height : 20px;
  line-height: 20px;
  padding-left:10px;
  font-size:12px;
  color:#999;
  font-weight: normal;
}
.his-list{
  width : 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  background:#f5f5f5;
  height:auto;
}

.his-list .nav .pos text {
  color : #999;
  font-size : 14px;
  font-weight: bold;
  height: 20px;
  line-height: 20px;
}




.his-list .bottom{
  width:100%;
  text-align: right;
  background:#fff;
  display: flex;
}

.his-list .bottom button {
  background : #838383;
  color:#fff;
  margin-right:10px;
}


.his-list .bottom-btn .look-over{
  background : #838383;
  color:#fff;
}
.his-list .bottom .look-active{
  background : #fe4800;
  color:#fff;
}
.his-list .bottom .cancel-btn{
  margin-left:10px;
}
.his-list .bottom .rob {
  text-align:center;
  background:red;
  color:#fff;
  font-weight:bold;
  margin:0 auto;
  border-radius:100%;
  padding:5px;
  display:inline-block;
  width:30px;
  height:30px;
  line-height:30px;
  vertical-align:middle;
  font-size:14px;
}
.his-list .bottom .rob:after{
  border:none;
}

.imageModa{
  display: flex;
}
.imageModal image{
  width:100%;
  height:200px;
  background-size: cover;
  margin:0 auto;
  text-align: center;
}